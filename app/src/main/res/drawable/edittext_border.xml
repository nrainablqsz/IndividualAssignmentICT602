<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Transparent background -->
    <solid android:color="@android:color/transparent"/>

    <!-- Border settings -->
    <stroke
        android:width="1dp"
        android:color="@color/pastel_dark_turquoise"/>

    <!-- Rounded corners -->
    <corners android:radius="8dp"/>

    <!-- Internal padding -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp"/>
</shape>